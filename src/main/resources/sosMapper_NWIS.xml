	 -->
	<select id="observationsSelect_NWIS" parameterType="map" resultMap="observationsResultMap" fetchSize="1024" useCache="false" resultSetType="FORWARD_ONLY">
		select f.station_nm,
		STR_TO_DATE(SYSDATE(),'%Y-%m-%d') as dateStamp,
		CONCAT(CONVERT(f.DEC_LAT_VA,CHAR),' ',CONVERT(f.DEC_LONG_VA,CHAR)) AS pos,
		s.FEATURE_ID,
		s.beginPosition,
		s.endPosition,
		CONCAT(CONVERT(DATE_FORMAT(g.result_dt,'%Y-%m-%dT%H:%i'),CHAR),f.tz_cd) as currentPosition,
		g.result_va as value,
		d.parameter_units as units,
		d.parameter_nm
		
		FROM
		    (select b.site_id,
		    CONCAT(b.agency_cd,'.', b.site_no) as FEATURE_ID,
		    CONCAT(CONVERT(DATE_FORMAT(MIN(a.result_dt),'%Y-%m-%dT%H:%i'),CHAR),b.tz_cd) as beginPosition,
		    CONCAT(CONVERT(DATE_FORMAT(MAX(a.result_dt),'%Y-%m-%dT%H:%i'),CHAR),b.tz_cd) as endPosition
		    
		    FROM nwisweb.UV a,
		    nwisweb.SITEFILE b
		    
		    WHERE (
		    
		    <choose>
		        <when test="featureId != null">
		        			b.site_no IN ( #{featureId[0]})
				    		<!--   CONCAT(b.agency_cd,'.',b.site_no) = #{featureId[0]}-->
		        </when>
		        
		        <when test="west != null">
				    		SDO_FILTER(s.geom, 
								SDO_GEOMETRY(2003, 8307, NULL, 
									SDO_ELEM_INFO_ARRAY(1,1003,3), 
									SDO_ORDINATE_ARRAY(#{west[0]},#{south[0]},#{east[0]},#{north[0]})
								)
				 			) = 'TRUE'
		        </when>
		        
		        <otherwise>
				    		b.site_no ='01427207'
				</otherwise>
		    </choose> 
		    
		    )        
		    and a.site_id = b.site_id
		    GROUP BY a.site_id) s,    
		    
		nwisweb.UV g,
		nwisweb.PARAM_REF d,
		nwisweb.UV_DD_CONF e,
		nwisweb.SITEFILE f
		
		WHERE s.site_id = g.site_id and f.site_id = s.site_id and e.site_id = s.site_id
		and d.parameter_cd = e.parameter_cd and e.dd_nu = g.dd_nu and e.parameter_cd = '00060'
		ORDER BY f.station_nm, currentPosition DESC
		
		  <!--trim prefix="AND (" suffix=")" prefixOverrides="AND"-->
		  <!-- date format example 2008-03-01T17:44:15+00 
		  to_date(#{beginPosition[0]}, 'MM/DD/YYYY')
		  to_date(#{beginPosition[0]}, 'YYYY-MM-DD')
		  TODO: make this a timeStamp
		  -->
			  <if test="beginPosition != null">
				AND g.dates <![CDATA[ >= ]]> to_date(#{beginPosition[0]}, 'YYYY-MM-DD')
			  </if>
			  <if test="endPosition != null">
				AND g.dates <![CDATA[ <= ]]> to_date(#{endPosition[0]}, 'YYYY-MM-DD')
			  </if>
		  <!--/trim-->
		  <!--  ORDER BY s.station_id,
		    g.dates-->		  
	</select>
	<!-- Jessica asked that LENGTH(g.dates) = 8 gets taken out. -->

